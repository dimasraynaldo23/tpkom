<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ttl_dataplg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:text="Silahkan Masukkan Data Pelanggan"
            android:textAlignment="center"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/txt_kdsales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Kode Sales"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_nomobi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Nomor Mobi"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_namaplg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="Nama Pelanggan"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_nomorplg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Nomor Pelanggan"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_nomoralt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Nomor Alternatif"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_relasiplg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Relasi Pelanggan"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_almtinst"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Alamat Instalasi"
                    android:textSize="6pt" />
                <TextView
                    android:id="@+id/txt_ptknalamat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:text="Patokan Alamat"
                    android:textSize="6pt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txt_photoKTP"
                    android:layout_marginBottom="20dp"
                    android:textSize="6pt"
                    android:text="Upload Foto KTP"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <EditText
                        android:id="@+id/in_kdsales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kode Sales"
                        android:textSize="6pt"/>

                <EditText
                        android:id="@+id/in_nmrmobi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor Mobi"
                        android:textSize="6pt" />

                <EditText
                        android:id="@+id/in_namaplg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Pelanggan"
                        android:textSize="6pt" />

                <EditText
                    android:id="@+id/in_nomorplg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Pelanggan"
                    android:textSize="6pt" />

                <EditText
                    android:id="@+id/in_nomoralt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nomor Alt"
                    android:textSize="6pt" />

                <EditText
                        android:id="@+id/in_relasiplg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Relasi Pelanggan"
                        android:textSize="6pt" />

                <EditText
                        android:id="@+id/in_almtinstl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat Instalasi"
                        android:textSize="6pt" />

                <EditText
                        android:id="@+id/in_ptknalamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Patokan Alamat"
                        android:textSize="6pt" />

                <ImageView
                    android:id="@+id/imageKTP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />

                <Button
                    android:id="@+id/btnPhotoKTP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textSize="6pt"
                    android:text="Pilih"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submitdataplg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:text="Submit" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>