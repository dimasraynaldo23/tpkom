<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="16dp">

        <TextView
            android:id="@+id/dataplg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="95dp"
            android:gravity="center"
            android:text="Data Pelanggan"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#fff" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-100dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/in_kdsales"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kode Sales"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_nmrmobi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nomor Mobi"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_namaplg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Pelanggan"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_nomorplg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nomor Pelanggan"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_nomoralt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nomor Alt"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_relasiplg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Relasi Pelanggan"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_almtinstl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat Instalasi"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_ptknalamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Patokan Alamat"
                            android:textSize="6pt" />

                        <EditText
                            android:id="@+id/in_tglinstal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tanggal Instalasi (DD/MM/YY)"
                            android:textSize="6pt" />

                        <ImageView
                            android:id="@+id/imageKTP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="bottom" />

                        <Button
                            android:id="@+id/submitdataPlg"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="170dp"
                            android:text="Submit"
                            android:textSize="5pt" />

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>